<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="livecaptions">
    <schema id='net.sapples.LiveCaptions' path='/net/sapples/LiveCaptions/'>
        <key name="font-name" type="s">
            <default>'Sans Regular 24'</default>
            <summary>The font of the captions</summary>
        </key>
        
        <key name="text-uppercase" type="b">
            <default>false</default>
            <summary>Display letters in uppercase instead of lowercase</summary>
        </key>
        
        <key name="fade-text" type="b">
            <default>false</default>
            <summary>Fade text based on confidence</summary>
        </key>

        <key name="filter-slurs" type="b">
            <default>true</default>
            <summary>Filter slurs</summary>
        </key>

        <key name="filter-profanity" type="b">
            <default>true</default>
            <summary>Filter swear words</summary>
        </key>

        <key name="microphone" type="b">
            <default>false</default>
            <summary>Caption microphone input instead of desktop audio</summary>
        </key>

        <key name="transparent-window" type="b">
            <default>false</default>
            <summary>Make window transparent</summary>
        </key>

        <key name="window-transparency" type="d">
            <default>0.0</default>
            <summary>How transparent the window is</summary>
        </key>

        <key name="line-width" type="i">
            <default>50</default>
        </key>

        <key name="benchmark" type="d">
            <default>-1.0</default>
        </key>

        <key name="keep-on-top" type="b">
            <default>true</default>
            <summary>Keep the Captions window on top</summary>
        </key>

        <key name="save-history" type="b">
            <default>true</default>
            <summary>Save history whenever the app is closed</summary>
        </key>

        <key name="installed-models" type="as">
            <default>['/app/LiveCaptions/models/aprilv0_en-us.april']</default>
            <summary>List of installed models</summary>
        </key>

        <key name="active-model" type="s">
            <default>'/app/LiveCaptions/models/aprilv0_en-us.april'</default>
            <summary>Currently active model</summary>
        </key>

        <key name="text-stream-active" type="b">
            <default>false</default>
            <summary>Enable DBus API for external applications to use caption output</summary>
        </key>

        <key name="auto-refresh" type="b">
            <default>false</default>
            <summary>Auto-refresh history</summary>
        </key>

        <key name="openai-key" type="s">
            <default>''</default>
            <summary>OpenAI API Token</summary>
        </key>

        <key name="openai-url" type="s">
            <default>''</default>
            <summary>OpenAI API Token</summary>
        </key>
    </schema>
</schemalist>
